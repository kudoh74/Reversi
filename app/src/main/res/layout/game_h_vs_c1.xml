<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tobashunsuke.reversi.GameHvsC1">

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="#000000"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"
        android:numColumns="8"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/textView_turn1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/clear"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_clear1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_turn1"
        android:textSize="40dp"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FF6B190A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_wb1"
        android:textSize="30dp"
        android:typeface="monospace"
        android:textColor="#FF6B190A"
        android:layout_below="@+id/gridview1"
        android:layout_alignEnd="@+id/gridview1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_result1"
        android:textSize="30dp"
        android:typeface="monospace"
        android:textColor="#ff0000"
        android:layout_alignBottom="@+id/return_gamemode1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/after"
        android:background="#00000000"
        android:id="@+id/after_attack1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/return_gamemode1"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/tomenu"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/return_gamemode1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>