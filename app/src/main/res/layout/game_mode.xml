<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tobashunsuke.reversi.GameMode">


    <ImageButton
        android:src="@drawable/hvshbutton"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/human_vs_human"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/human_vs_computer_level_1" />

    <ImageButton
        android:src="@drawable/hvsc1button"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/human_vs_computer_level_1"
        android:layout_below="@+id/human_vs_human"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/hvsc2button"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/human_vs_computer_level_2"
        android:layout_below="@+id/human_vs_computer_level_1"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:src="@drawable/totitle"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/droid"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droid_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>